<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLogin">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#5B5B5B</item>
    </style>

    <style name="TextEditUsername">
        <item name="android:drawableLeft">@drawable/ic_username</item>
        <item name="android:background">@drawable/custom_edit_text_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#5B5B5B</item>
    </style>

    <style name="TextEditPassword">
        <item name="android:drawableLeft">@drawable/ic_password</item>
        <item name="android:background">@drawable/custom_edit_text_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#5B5B5B</item>
    </style>
    <style name="ButtonLoginStyle">

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/login_bg</item>

    </style>
    
    <style name="ButtonRegister">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/login_bg</item>
    </style>

    <style name="TextSignUp">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#5B5B5B</item>
    </style>

    <style name="EditTextSignUp">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/custom_edit_text_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#5B5B5B</item>
    </style>

    <style name="TextHeadProfile">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
