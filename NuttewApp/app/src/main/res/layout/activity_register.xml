<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD3AA"
    tools:context=".registerActivity">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextLogin"
            android:text="@string/text_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            style="@style/TextSignUp"
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_email">

        </TextView>

        <EditText
            style="@style/EditTextSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_sign_up_email">

        </EditText>

        <TextView
            style="@style/TextSignUp"
            android:id="@+id/textSignUpUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_username">

        </TextView>

        <EditText
            style="@style/EditTextSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_sign_up_username">

        </EditText>

        <TextView
            style="@style/TextSignUp"
            android:id="@+id/textSignUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_password">

        </TextView>

        <EditText
            style="@style/EditTextSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_sign_up_password">

        </EditText>

        <TextView
            style="@style/TextSignUp"
            android:id="@+id/textConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_confirm_password">

        </TextView>

        <EditText
            style="@style/EditTextSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_sign_up_confirm_password">

        </EditText>

        <Button
            android:layout_marginTop="20dp"
            style="@style/ButtonRegister"
            android:text="@string/button_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>

    </LinearLayout>
</LinearLayout>